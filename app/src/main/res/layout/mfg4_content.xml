<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            app:srcCompat="@mipmap/tab_better_pressed" />

        <LinearLayout
            android:id="@+id/layout_6"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="名称"
                android:textColor="@color/bg_black"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/div_white" />

            <TextView
                android:id="@+id/news_title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="简介"
                android:textColor="@color/bg_black"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_7"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_title_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/bg_black"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/div_white" />

            <TextView
                android:id="@+id/news_title_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/bg_black"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/text_gray" />

    <TextView
        android:id="@+id/news_content_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="账户设置"
        android:textColor="@color/bg_black"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/div_white" />


    <TextView
        android:id="@+id/news_content_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="推送设置"
        android:textColor="@color/bg_black"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/div_white" />


    <TextView
        android:id="@+id/news_content_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="关于我们"
        android:textColor="@color/bg_black"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/div_white" />

    <TextView
        android:id="@+id/news_content_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="注销账户"
        android:textColor="@color/bg_black"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/div_white" />

    <TextView
        android:id="@+id/news_content_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="退出"
        android:textColor="@color/bg_black"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/div_white" />


</LinearLayout>