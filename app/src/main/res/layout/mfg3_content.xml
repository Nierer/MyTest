<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
        android:id="@+id/title_12"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:textSize="24sp"
        android:shadowColor="@android:color/holo_blue_light"
        android:shadowDx="10.0"
        android:shadowDy="10.0"
        android:shadowRadius="3.0"
        android:textColor="@android:color/holo_red_light"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="双击可进行折线图放缩操作~~~放大后可左右滑动~~~"/>

        <Button
            android:id="@+id/button_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="切换"
            android:background="@drawable/button_background"
            android:textColor="@color/bg_black"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:padding="5dp"
            android:text=""
            android:layout_gravity="center_horizontal"
            android:textColor="@color/bg_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/title_10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:padding="5dp"
            android:text=""
            android:layout_gravity="center_horizontal"
            android:textColor="@color/bg_black"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/bg_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/title_13"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="监测点:"
            android:textColor="@color/bg_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/title_14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:padding="5dp"
            android:text="100000"
            android:textColor="@color/bg_black"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:background="@android:drawable/arrow_down_float"
            android:padding="5dp"
            android:textColor="@color/bg_black"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:padding="5dp"
            android:text="类型："
            android:textColor="@color/bg_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/title_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/bg_black"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:background="@android:drawable/arrow_down_float"
            android:padding="5dp"
            android:textColor="@color/bg_black"
            android:textSize="18sp" />



        <TextView
            android:id="@+id/title_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.4"
            android:padding="5dp"
            android:text="日期："
            android:textColor="@color/bg_black"
            android:textSize="18sp" />


        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:padding="5dp"
            android:text="选择"
            android:textColor="@color/bg_black"
            android:background="@drawable/button_background"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/title_18"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/bg_black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:padding="5dp"
            android:text="刷新"
            android:textColor="@color/bg_black"
            android:background="@drawable/button_background"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radiobutton1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="X值"
                android:button="@null"
                android:textSize="18sp"
                android:checked="true"
                android:background="@drawable/sent_bg"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"/>

            <RadioButton

                android:id="@+id/radiobutton2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Y值"
                android:button="@null"
                android:textSize="18sp"
                android:background="@drawable/sent_bg"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"/>

            <RadioButton
                android:id="@+id/radiobutton3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="温度"
                android:textSize="18sp"
                android:button="@null"
                android:background="@drawable/sent_bg"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"/>

            <RadioButton
                android:id="@+id/radiobutton4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="电源"
                android:textSize="18sp"
                android:button="@null"
                android:background="@drawable/sent_bg"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"/>

            <RadioButton
                android:id="@+id/radiobutton5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="XY"
                android:textSize="18sp"
                android:button="@null"
                android:background="@drawable/sent_bg"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"/>




        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:padding="5dp"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_light"
            android:text="名称"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/title_22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:padding="5dp"
            android:gravity="center"
            android:text="X值"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/holo_red_light"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/title_23"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:gravity="center"
            android:padding="5dp"
            android:text="Y值"
            android:visibility="gone"
            android:textColor="@android:color/holo_green_light"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/title_24"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.3"
            android:padding="5dp"
            android:gravity="center"
            android:text="温度"
            android:visibility="gone"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/title_25"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.3"
            android:padding="5dp"
            android:gravity="center"
            android:text="电源"
            android:visibility="gone"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/title_26"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="4"
            android:padding="5dp"
            android:text="时间"
            android:visibility="gone"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="14sp" />

    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:visibility="visible"
        android:layout_marginTop="10dp"></com.github.mikephil.charting.charts.LineChart>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="24sp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="8dp" />


</LinearLayout>